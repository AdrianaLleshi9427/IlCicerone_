                            <h1>@Model.TourName</h1>
                            <div class="rating-holder orange"><a class="toolTipster fancybox cursorPointer tooltipstered"></a></div>
                        </div>
                        <article class="post-content pad-clean">
                            <div class="text-center">
                                <p class="lead"> </p>
                            </div>
                            <p>
                                @Model.Description
                            </p>            
