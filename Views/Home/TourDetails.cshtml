                                                <h2>Story <i class="fas fa-chevron-down"></i></h2>
                                            </div>
                                            <div class="accordion-content" id="item1" style="display: block;">
                                                <p>
                                                    @Model.Story
                                                </p>
                                            </div>
                                        </div>

                                        <div class="accordion-item">
                                            <div class="accordion-title" data-tab="item2">
                                                <h2>Art and Culture <i class="fas fa-chevron-down"></i></h2>
                                            </div>
                                            <div class="accordion-content" id="item2">
                                                <p>
                                                    @Model.ArtandCulture
                                                </p>
                                            </div>
                                        </div>

                                        <div class="accordion-item">
                                            <div class="accordion-title" data-tab="item3">
                                                <h2>Entertainment and Recreation <i class="fas fa-chevron-down"></i></h2>
                                            </div>
                                            <div class="accordion-content" id="item3">
