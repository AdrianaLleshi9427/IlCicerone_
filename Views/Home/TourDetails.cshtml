@model IlCicerone.Models.Tour
@{
    ViewBag.Title = "TourDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Sailor/assets/css/tourDetails.css" rel="stylesheet" />

<main id="main">
    <!-- ======= Contact Section ======= -->
