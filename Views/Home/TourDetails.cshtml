                                            </div>
                                        </div>

                                        <div class="accordion-item">
                                            <div class="accordion-title" data-tab="item5">
                                                <h2>Gastronomy <i class="fas fa-chevron-down"></i></h2>
                                            </div>
                                            <div class="accordion-content" id="item5">
                                                <p>
                                                    @Model.Gastronomy
