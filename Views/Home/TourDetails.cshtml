                        </div>
                    </aside>
                    <div class="guide-contact-section"></div>
                    <div class="guide-tours-section"></div>
                </div>
            </section>
            </div>
</main>
<script type="text/javascript" src="~/AdminStyle/plugins/jquery/jquery.js"></script>
<script>
    jq162 = jQuery.noConflict(true);
    jq162(document).ready(function () {
        jq162(".accordion-title").click(function (e) {
            var accordionitem = $(this).attr("data-tab");
            $("#" + accordionitem).slideToggle().parent().siblings().find(".accordion-content").slideUp();

            $(this).toggleClass("active-title");
            $("#" + accordionitem).parent().siblings().find(".accordion-title").removeClass("active-title");

            $("i.fa-chevron-down", this).toggleClass("chevron-top");
            $("#" + accordionitem).parent().siblings().find(".accordion-title i.fa-chevron-down").removeClass("chevron-top");
        });

    });

// icon from Font Awesome was used in accordion-1
</script>