                                            </div>
                                        </div>

                                        <div class="accordion-item">
                                            <div class="accordion-title" data-tab="item6">
                                                <h2>How and when to arrive <i class="fas fa-chevron-down"></i></h2>
                                            </div>
                                            <div class="accordion-content" id="item6">
                                                <p>
                                                    @Model.Howandwhentoarrive
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                            <section class="page-inner-section"></section>
