@model IlCicerone.Models.TourCollection
@{
    ViewBag.Title = "TourCollectionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
<!-- Page Content -->
<main id="main">
    <!-- ======= Contact Section ======= -->
    <section>
        <div class="container">
            <section id="breadcrumbs" class="breadcrumbs">
                <ol style="float: right;">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tour Collection", "TourCollection", "Home")</li>
                    <li>Tour Collection Details</li>
                </ol>
            </section>
            <!-- End Breadcrumbs -->
            <div class="row details">
                <!-- Post Content Column -->
                <div class="col-lg-8">
                    <!-- Title -->
                    <h1 class="mt-4 article-title">@Model.TourCollectionTitle</h1>
                    <!-- Author -->
                    <p class="lead">
                        by
                        <a href="#">@Model.UserId</a>
                    </p>
                    <hr>
                    <!-- Date/Time -->
                    <p>@Model.TourCollectionDate</p>
                    <hr>
                    <!-- Preview Image -->
                    <img class="img-fluid rounded" src="~/Images/Tour/@Model.CollectionImage" alt="">
                    <hr>
                    <!-- Post Content -->
                    <p class="lead">@Model.TourCollectionDetails</p>
                    <blockquote class="blockquote">
                        <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                        <footer class="blockquote-footer">
                            Someone famous in
                            <cite title="Source Title">Source Title</cite>
                        </footer>
                    </blockquote>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Error, nostrum, aliquid, animi, ut quas placeat totam sunt tempora commodi nihil ullam alias modi dicta saepe minima ab quo voluptatem obcaecati?</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Harum, dolor quis. Sunt, ut, explicabo, aliquam tenetur ratione tempore quidem voluptates cupiditate voluptas illo saepe quaerat numquam recusandae? Qui, necessitatibus, est!</p>
                    <hr>
                </div>
                <!-- Sidebar Widgets Column -->
                <div class="col-md-4">
                    <!-- Search Widget -->
                    <div class="card my-4">
                        <h5 class="card-header">Search</h5>
                        <div class="card-body">
                            <div class="input-group">
                                @using (Html.BeginForm("TourCollection", "Home", FormMethod.Get))
                                {
                                    <input type="text" class="form-control" name="txtSearch" placeholder="Search for..." />
                                    <span class="input-group-append">
                                        <button type="submit" class="btn btn-secondary">
                                            Search
                                        </button>
                                    </span>}
                            </div>
                        </div>
                    </div>
                    <!-- Categories Widget -->
                    <div class="card my-4">
                        <h5 class="card-header">Categories</h5>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <a href="#">Web Design</a>
                                        </li>
                                        <li>
                                            <a href="#">HTML</a>
                                        </li>
                                        <li>
                                            <a href="#">Freebies</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <a href="#">JavaScript</a>
                                        </li>
                                        <li>
                                            <a href="#">CSS</a>
                                        </li>
                                        <li>
                                            <a href="#">Tutorials</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Side Widget -->
                    <div class="card my-4">
                        <h5 class="card-header">Side Widget</h5>
                        <div class="card-body">
                            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
</main>