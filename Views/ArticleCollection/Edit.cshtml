@model IlCicerone.Models.ArticleCollection

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Edit Collection
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "ArticleCollection", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                     @Html.AntiForgeryToken()
                     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                     @Html.HiddenFor(m => m.ArticleCollectionID)

                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(m => m.ArticleCollectionTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ArticleCollectionTitle, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Details</label>
                        @Html.TextAreaFor(m => m.ArticleCollectionDetails, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ArticleCollectionDetails, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CollectionImage, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" name="file" />
                            @Html.EditorFor(model => model.CollectionImage, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CollectionImage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Article Owner</label>
                        @Html.TextBoxFor(m => m.ArticleColOwner, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ArticleColOwner, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Article date</label>
                        @Html.TextBoxFor(model => model.ArticleCollectionDate, "{0:dd/MMM/yyyy HH:mm}", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ArticleCollectionDate, "", new { @class = "text-danger" })
                    </div>  
                        <div class="form-group">
                            <input type="submit" name="submit" value="Update" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                    <span class="badge badge-danger">@ViewBag.message</span>}
                        </div>
                        }
                    </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
