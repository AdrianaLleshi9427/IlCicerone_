@model IlCicerone.Models.Carousel
@{
    ViewBag.Title = "Carousel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Image to Carousel
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Carousel", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.URL, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="file" name="file" />
                                @Html.ValidationMessageFor(m => m.URL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Title</label>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "description" })
                        </div>
                        <div class="form-group">
                            <label>Link</label>
                            @Html.TextBoxFor(m => m.Link_destination, new { @class = "form-control", @placeholder = "Link" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" value="Add Image" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


