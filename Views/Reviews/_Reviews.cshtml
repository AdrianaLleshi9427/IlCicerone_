@model IEnumerable<IlCicerone.Models.TourReview>

<table class="table" id="data3">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ReviewerName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.VisitedOn)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitedOn)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Reviews", new { id = item.Id })" class="btn btn-warning">
                    Edit
                    <span class="glyphicon glyphicon-edit" />
                </a>
                <a href="@Url.Action("Delete", "Reviews", new { id = item.Id })" class="btn btn-danger">
                    Delete
                    <span class="glyphicon glyphicon-minus-sign" />
                </a>



            </td>
        </tr>
}

</table>
